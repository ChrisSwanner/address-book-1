<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
    <title>Address Book</title>
  </head>
  <body>
    <div class="container">
      <h1>Your Contacts:</h1>
      @foreach (var contact in Model)
      {
        <li><a href='/contacts/@contact.GetId()'>@contact.GetName()</a></li>
      }
      <form class="inline" action="/contacts/new" method="get">
        <button class="btn btn-success" type="submit" name="button">Add Contact</button>
      </form>
      <form class="inline" action="/contacts/delete" method="post">
        <button class="btn btn-danger" type="submit" name="button">Delete All</button>
      </form>

    </div>


  </body>
</html>
